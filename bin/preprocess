#!/usr/bin/env ruby
$:.unshift(File.join File.dirname(__FILE__), '..')

require 'nokogiri'
require 'lib/svg'
require 'lib/equation'
require 'lib/pattern'
require 'lib/chapter'

ARGV.each do |html|
  document = File.read(html)
  output = Chapter.new(document).take_document.separate_tags.replace_equations.rasterize_vectors
  File.write html, output
end
